	@RequestMapping({"/home","/"}) 
	public ModelAndView hello(@RequestParam("name") String name) {
		ModelAndView mv = new ModelAndView();
		mv.addObject("name",name);
		List<Dog> listDog = new ArrayList<>();
		Dog d = new Dog();
		d.setDog("default", 3, "husky");
		
		listDog.add(d);
		
		mv.setViewName("index");
		
		return mv; 
	}
}
